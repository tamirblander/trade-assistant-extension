{
  "manifest_version": 3,
  "name": "Trade Assistant",
  "version": "1.0",
  "description": "A trade assistant extension.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Trade Assistant"
  },
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Alt+Shift+A",
        "mac": "Alt+Shift+A"
      },
      "description": "Take screenshot and analyze chart"
    }
  }
}
